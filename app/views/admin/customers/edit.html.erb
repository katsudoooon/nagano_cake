<h1>会員情報編集画面</h1>
<%= form_with model:@customer, url:admin_item_path(@item.id), local: true do |f| %>
<h4>姓</h4>
<%= f.text_field :last_name %>
<h4>名</h4>
<%= f.text_field :first_name %>
<h4>姓カナ</h4>
<%= f.text_field :last_name_kana %>
<h4>名カナ</h4>
<%= f.text_field :first_name_kana %>
<h4>メールアドレス</h4>
<%= f.text_field :email %>
<h4>パスワード</h4>
<%= f.text_field :encrypted_password %>
<h4>郵便番号</h4>
<%= f.text_field :postal_code %>
<h4>住所</h4>
<%= f.text_field :address %>
<h4>電話番号</h4>
<%= f.text_field :telephone_number %>
<h4>販売ステータス</h4>
<label><%= f.radio_button :is_active, "true", checked: true %>登録</label>
<label><%= f.radio_button :is_active, "false" %>退会</label>
<%= f.submit '更新' %>
<% end %>
<%= link_to "Back", admin_customer_path(@customer.id) %>