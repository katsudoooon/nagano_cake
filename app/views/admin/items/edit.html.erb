<h1>商品編集</h1>
<%= form_with model:@item, url:admin_item_path(@item.id), local: true do |f| %>
<h4>名前</h4>
<%= f.text_field :name %>
<h4>商品画像</h4>
<%= f.attachment_field :image %>
<h4>商品説明</h4>
<%= f.text_area :introduction %>
<h4>価格（税抜）</h4>
<%= f.text_field :price %>
<h4>ジャンル</h4>
<%= f.collection_select :genre_id, Genre.all, :id, :name %>
<h4>販売ステータス</h4>
<label><%= f.radio_button :is_active, "true", checked: true %>販売中</label>
<label><%= f.radio_button :is_active, "false" %>売切れ</label>
<%= f.submit '追加' %>
<% end %>
<%= link_to "Back", admin_item_path(@item.id) %>